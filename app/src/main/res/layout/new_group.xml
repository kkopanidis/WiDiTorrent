<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="text|textPersonName"
            android:text="Group name:"
            android:ems="10"
            android:id="@+id/group_prompt"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="122dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/groupField"
            android:layout_marginTop="28dp"
            android:layout_below="@+id/group_prompt"
            android:layout_alignParentStart="true"
            android:hint="enter group name" />

        <Button
            android:text="OK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/groupField"
            android:layout_alignParentStart="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="20dp"
            android:id="@+id/okBttn" />

        <Button
            android:text="CANCEL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/okBttn"
            android:layout_alignEnd="@+id/group_prompt"
            android:id="@+id/cancelBttn" />

    </RelativeLayout>
</LinearLayout>